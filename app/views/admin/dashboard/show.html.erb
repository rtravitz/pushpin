<h1>Your role: admin</h1>
<h3>Users:</h3>
<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Status</th>
    <th>Change status</th>
    <th>Delete user?</th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.id %></td>
    <td><%= user.name %></td>
    <td><%= user.status %></td>
    <% if user.active? %>
      <td id=update_<%= user.id %>><%= button_to "Deactivate", admin_update_user_path(user), method: :put %></td>
    <% else %>
      <td id=update_<%= user.id %>><%= button_to "Activate", admin_update_user_path(user), method: :put %></td>
    <% end %>
    <td id=delete_<%= user.id %>><%= button_to "Delete", admin_delete_user_path(user), method: :delete %></td>
  </tr>
  <% end %>
</table>
